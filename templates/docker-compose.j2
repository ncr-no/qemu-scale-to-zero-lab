services:
  caddy:
    build:
      context: ..
      dockerfile: Dockerfile
      args:
        CADDY_VERSION: "2.9.1"
    ports:
      - "80:80"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_logs:/var/log/caddy
    depends_on:
      - sablier
      - container-lock
      - redis
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - qemu-network

  sablier:
    image: repository.ncr.ntnu.no/sablierapp/sablier:1.9.0
    command:
      - start
      - --provider.name=docker
      - --strategy.dynamic.default-theme=hacker-terminal
      - --strategy.dynamic.default-refresh-frequency=5s
      - --strategy.dynamic.show-details-by-default=true
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    restart: always
    healthcheck:
      test: ["CMD", "nc", "-z", "localhost", "10000"]
      interval: 10s
      timeout: 5s
      retries: 5
    depends_on:
      - container-lock
      - redis
    networks:
      - qemu-network

{% for i in range(1, n + 1) %}
  {{ container_prefix }}_{{ i }}:
    image: repository.ncr.ntnu.no/qemux/qemu
    container_name: {{ container_prefix }}_{{ i }}
    environment:
      BOOT_MODE: "{{ boot_mode | default('legacy') }}"
      BOOT: "{{ boot_image | default('kali') }}"
      RAM_SIZE: "{{ ram_size | default('2G') }}"
      CPU_CORES: "{{ cpu_cores | default('2') }}"
    devices:
      - /dev/kvm
      - /dev/net/tun
    cap_add:
      - NET_ADMIN
    expose:
      - "8006"
    volumes:
      {% if boot_image == 'kali' %}
      - {{ container_prefix }}_{{ i }}:/storage:rw
      {% else %}
      - {% if volume_prefix == '.' %}.{% else %}{{ volume_prefix }}{% endif %}/{{ container_prefix }}_{{ i }}:/storage:rw
      {% endif %}
    restart: unless-stopped
    labels:
      - sablier.enable=true
      - sablier.group=qemu-lab
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8006"]
      interval: 15s
      timeout: 5s
      retries: 5
    networks:
      - qemu-network
{% endfor %}

  redis:
    image: repository.ncr.ntnu.no/redis:7.2-alpine
    restart: always
    networks:
      - qemu-network

  container-lock:
    build:
      context: ../container-lock
      dockerfile: Dockerfile
    environment:
      REDIS_URL: "redis://redis:6379/0"
{% if docker_host %}
      DOCKER_HOST: "{{ docker_host }}"
      DOCKER_TLS_VERIFY: "1"
      DOCKER_CERT_PATH: "/certs/client"
    volumes:
      - {{ docker_ca }}:/certs/client/ca.pem:ro
      - {{ docker_cert }}:/certs/client/cert.pem:ro
      - {{ docker_key }}:/certs/client/key.pem:ro
{% else %}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
{% endif %}
    ports:
      - "8000:8000"
    depends_on:
      - redis
    networks:
      - qemu-network

networks:
  qemu-network:
    driver: bridge

volumes:
  caddy_data:
  caddy_config:
  caddy_logs:
{% if boot_image == 'kali' %}
{% for i in range(1, n + 1) %}
  {{ container_prefix }}_{{ i }}:
    driver: local
    driver_opts:
      type: tmpfs
      device: tmpfs
      o: size=50g
{% endfor %}
{% endif %} 