{
    admin off
    auto_https off
    order sablier before reverse_proxy
    log {
        output file /var/log/caddy/access.log {
            roll_size 10MB
            roll_keep 5
            roll_keep_for 720h
        }
        format json
    }
}

:80 {
    log {
        output file /var/log/caddy/error.log {
            roll_size 10MB
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level ERROR
    }

    # Host container-lock at root
    handle_path / {
        reverse_proxy container-lock:8000 {
            header_up X-Real-IP {remote}
        }
    }

    # Redirect container paths to add trailing slash
    @containers path /vm/kali_1 /vm/kali_2 /vm/kali_3
    redir @containers {http.request.uri.path}/ permanent

    # VM routes moved to /vm/kali_* paths
    route /vm/kali_1/* {
        uri strip_prefix /vm/kali_1
        sablier http://sablier:10000 {
            names kali_1
            session_duration 10m
            dynamic {
                display_name "Kali Container 1"
                show_details true
                theme hacker-terminal
                refresh_frequency 5s
            }
        }
        reverse_proxy kali_1:8006 {
            header_up Host kali_1:8006
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    route /vm/kali_2/* {
        uri strip_prefix /vm/kali_2
        sablier http://sablier:10000 {
            names kali_2
            session_duration 10m
            dynamic {
                display_name "Kali Container 2"
                show_details true
                theme hacker-terminal
                refresh_frequency 5s
            }
        }
        reverse_proxy kali_2:8006 {
            header_up Host kali_2:8006
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    route /vm/kali_3/* {
        uri strip_prefix /vm/kali_3
        sablier http://sablier:10000 {
            names kali_3
            session_duration 10m
            dynamic {
                display_name "Kali Container 3"
                show_details true
                theme hacker-terminal
                refresh_frequency 5s
            }
        }
        reverse_proxy kali_3:8006 {
            header_up Host kali_1:8006
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }

    # Redirect unmatched paths to container-lock
    @not_handled {
        not path /vm/kali_1*
        not path /vm/kali_2*
        not path /vm/kali_3*
    }
    handle @not_handled {
        reverse_proxy container-lock:8000 {
            header_up X-Real-IP {remote}
        }
    }
}